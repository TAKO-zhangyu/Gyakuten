<section id="contents">
  <h2 class="text-center text-success">LINE@</h2>
  <div class="table-container">
    <table class="table table-striped">
      <thead class="bg-success text-white">
      <tr>
        <th class="w-1">No.</th>
        <th class="w-2">ジャンル</th>
        <th class="w-5">内容</th>
      </tr>
      </thead>
      <tbody>
      <% @lines.each.with_index(1) do |line, i| %>
        <tr>
          <td>
            <%= i %>
          </td>
          <td>
            <%= line.genre %>
          </td>
          <td>
            <%= link_to line.title, line_path(line.id), target: "_blank" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>