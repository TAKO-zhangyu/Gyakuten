<section id="contents">
  <h2 class="text-center">Movie</h2>
  <div class="table-container">
    <table class="table table-striped">
      <thead class="bg-danger text-white">
        <tr>
          <th class="w-1">スキルレベル</th>
          <th class="w-2">ジャンル</th>
          <th class="w-5">内容</th>
        </tr>
      </thead>
      <tbody>
        <% @contents[:movie].each.with_index(1) do |movie, i| %>
          <tr>
            <td>
              <p>Lv.<%= i %></p>
            </td>
            <td>
              <%= movie.genre %>
            </td>
            <td>
              <%= link_to movie.title, movie_path(movie.id) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <h2 class="text-center">Text</h2>
  <div class="table-container">
    <table class="table table-striped">
      <thead class="bg-danger text-white">
      <tr>
        <th class="w-1">スキルレベル</th>
        <th class="w-2">ジャンル</th>
        <th class="w-5">内容</th>
      </tr>
      </thead>
      <tbody>
      <% @contents[:text].each.with_index(1) do |text, i| %>
        <tr>
          <td>
            <p>Lv.<%= i %></p>
          </td>
          <td>
            <%= text.genre %>
          </td>
          <td>
            <%= link_to text.title, text_path(text.id) %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>
