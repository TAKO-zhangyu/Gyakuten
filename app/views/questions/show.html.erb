<% if @question.user_id == current_user.id %>
  <%= link_to "質問内容を修正", edit_question_path(@question), class: "btn btn-warning btn-block btn-lg" %>
<% end %>
<%#= render 'answer_form' %>
<section id="question">
  <div class="title">
    <h3>【質問】</h3>
    <p><%= @question.title %></p>
  </div>
  <hr>
  <div class="detail">
    <h3>【詳細】</h3>
    <p><%= markdown(@question.details).html_safe %></p>
  </div>
  <% if @question.solution %>
    <hr>
    <div class="solution">
      <h3>【回答】</h3>
      <p><%= markdown(@question.solution).html_safe %></p>
    </div>
  <% end %>
</section>
