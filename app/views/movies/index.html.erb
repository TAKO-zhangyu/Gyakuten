<section id="movie">
  <div class="container">
    <div class="rows">
      <!-- 追加箇所 -->
      <%= render 'shared/take_of_rails' %>

      <div class="text-center">
        <% if user_signed_in? %>

          <div class="col-xs-12">
            <% if @content_name == "movies" %>
              <% @movies.each.with_index(@level) do |movie, i| %>
                  <div class="movie-title">
                    Lv.<%= i %>：<%= movie.title %>
                  </div>
                  <div class="movie-contents">
                    <%= movie.contents.html_safe if movie.contents.present? %>
                    <div class="movie-description">
                      <%  if movie.desc.present? %>
                        <%= link_to "ソースコード", "#{movie.desc}", { target: "_blank" } %>
                      <% end %>
                    </div>
                  </div>
              <% end %>
            <% else %>
              <% @movies.each do |movie| %>
                <div class="col-xs-12">
                  <div class="movie-title">
                    <%= movie.title %>
                  </div>
                  <div class="movie-contents">
                    <%= movie.contents.html_safe if movie.contents.present? %>
                    <div class="disp-source">
                      <%  if movie.desc.present? %>
                        <%= link_to "ソースコード", "#{movie.desc}", { target: "_blank" } %>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>

          <div class="paginate-container">
            <%= paginate @movies %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
