<!DOCTYPE html>
<html>
  <head>
    <title>Gyakuten</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'contents' if controller.controller_name == 'contents' %>
  </head>

  <body>
    <section id="nav">
      <% color = controller.controller_name == "lines" ? "bg-success" : "bg-danger" %>
      <nav class="navbar navbar-expand-lg navbar-dark <%= color %>">
        <%= link_to "Gyakuten", movies_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <%= link_to "動画教材", movies_path, class: "nav-item nav-link active" %>
            </li>
            <li class="nav-item active">
              <%= link_to "テキスト教材", contents_path, class: "nav-item nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "ランダム動画", salons_path, class: "nav-item nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "質問集", questions_path, class: "nav-item nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "LINE@", lines_path, class: "nav-item nav-link active" %>
            </li>
            <li class="nav-item">
              <% if user_signed_in? %>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-item nav-link" %>
              <% else %>
                <%= link_to "ログイン", new_user_session_path, class: "nav-item nav-link active" %>
              <% end %>
            </li>
          </ul>
        </div>
      </nav>
    </section>

    <div id="container">
      <%= yield %>
    </div>

    <footer class="footer <%= color %>">
      <%= link_to "教材一覧", contents_path, class: "text-white" %>
      <%= link_to "ブログ", "http://utina.yoshitokamizato.com/", class: "text-white", target: "_blank" %>
      <%= link_to "Youtube", "https://www.youtube.com/channel/UCwrDvYey9uKGBeh_l5IF-ag", class: "text-white", target: "_blank" %>
    </footer>
  </body>
</html>
